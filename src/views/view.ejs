<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('components/importCssFiles.ejs') %>
        <title>Customer view</title>
</head>

<body class="bg-primary-subtle position-relative">
    <div class="container">
        <%- include('./components/navbar.ejs') %>
            <%- include('./components/side-bar.ejs',{activeLink:"home"}) %>
                <h3 class="p-3 ps-0 "><a href="/home" class="link-primary">Home</a>/View/User</h3>
                <div class="user-id">id:<%= customer.id %>
                </div>
                <table class="table table-striped table-hover text-center">
                    <tr>
                        <td>Full name</td>
                        <td>
                            <%= customer.firstName +" "+ customer.lastName %></td>
                </tr>
                <tr>
                    <td>Age</td>
                    <td><%= customer.age %></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><%= customer.email %></td>
                </tr>
                <tr>
                    <td>Tell-number</td>
                    <td><%= customer.telNumber %></td>
                </tr>
                <tr>
                    <td>Gender</td>
                    <td><%= customer.gender %></td>
                </tr>
                <tr>
                    <td>Country</td>
                    <td><%= customer.country %></td>
                </tr>
                <tr>
                    <td>Created on</td>
                    <td><%= moment(customer.createdAt).fromNow() %></td>
                </tr>
                <tr>
                    <td>last update</td>
                    <td><%= moment(customer.updatedAt).fromNow() %></td>
                </tr>
            </table>
            <div class=" d-flex justify-content-between">
                <form action="/delete/<%= customer._id %>?_method=DELETE" method="post">
                    <button class="btn btn-danger">Delete Customer</button>
                </form>
                <a href="/edit/<%= customer._id %>">>>Update customer info</a>
            </div>
    </div>
</body>
<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/js/light-dark-mode.js"></script>
<script src="/js/side-bar.js"></script>

</html>